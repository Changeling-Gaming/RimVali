<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- Base guns -->

  <ThingDef Name="AvaliGun" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Industrial</techLevel>
    <smeltable>true</smeltable>
    <thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <statBases>
      <Flammability>0.5</Flammability>
    </statBases>
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>      
    </comps>
  </ThingDef>

  <ThingDef Name="AvaliGunWithQuality" Abstract="True" ParentName="AvaliGun">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="AvaliMakeableGun" ParentName="AvaliGunWithQuality" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>AvaliNanoForge</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
  <!-- Pistol bullet -->

  <ThingDef ParentName="BaseBullet">
    <defName>AvaliPistolBullet</defName>
    <label>Avali Bullet</label>
    <graphicData>
      <texPath>avali/Things/Weapons/Guns/Bullet/SmallBullet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>11</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <speed>150</speed>
      <armorPenetrationBase>0.2</armorPenetrationBase>
    </projectile>
  </ThingDef>
  
  <!-- Pistol -->
  <ThingDef ParentName="AvaliMakeableGun">
    <defName>AvaliPistol</defName>
    <label>Avali Pistol</label>
    <description>A common avali pistol. Unlike most human pistols, this gun uses coilgun technology to fire its bullets.</description>
    <graphicData>
      <texPath>avali/Things/Weapons/Guns/Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
    <weaponTags>
      <li>AvaliWeapons</li>
    </weaponTags>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <Mass>1.5</Mass>
      <AccuracyTouch>0.9</AccuracyTouch>
      <AccuracyShort>0.8</AccuracyShort>
      <AccuracyMedium>0.7</AccuracyMedium>
      <AccuracyLong>0.6</AccuracyLong>
      <RangedWeapon_Cooldown>0.5</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>AvaliPistolBullet</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>15</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>0</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <AvaliTungstenPowder>5</AvaliTungstenPowder>
    </costList>
    
    <recipeMaker>
      <researchPrerequisite>AvaliBasicWeapons</researchPrerequisite>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
  
