  <!-- Pistol -->
  <ThingDef ParentName="AvaliMakeableGun">
    <defName>AvaliPistol</defName>
    <label>Illuminate Pistol</label>
    <description>A common Illuminate pistol. Unlike most human pistols, this gun uses coilgun technology to fire its bullets.</description>
    <graphicData>
      <texPath>avali/Things/Weapons/Guns/Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
    <weaponTags>
      <li>AvaliWeapons</li>
    </weaponTags>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <Mass>1.5</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>0.89</AccuracyShort>
      <AccuracyMedium>0.63</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>AvaliPistolBullet</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>30</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>0</muzzleFlashScale>
        <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
        <burstShotCount>2</burstShotCount>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <AvaliTungstenPowder>5</AvaliTungstenPowder>
    </costList>
    
    <recipeMaker>
      <researchPrerequisite>AvaliBasicWeapons</researchPrerequisite>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
    </recipeMaker>
