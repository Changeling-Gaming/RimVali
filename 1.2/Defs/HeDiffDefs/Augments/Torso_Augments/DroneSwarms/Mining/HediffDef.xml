<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="ImplantHediffBase">
    <defName>DroneMining</defName>
    <label>Micro drone swarm (Mining)</label>
    <description>This augment produces a swarm of micro-drones, dedicated to assisting in one singular task. In this case, it's mining.</description>
    <spawnThingOnRemoved>DroneConstruction</spawnThingOnRemoved>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <statOffsets>
          <MiningSpeed>1.2</MiningSpeed>
          <DeepDrillingSpeed>1.2</DeepDrillingSpeed>
          <MiningYield>0.8</MiningYield>
        </statOffsets>
      </li>
    </stages>
    <comps>
     <li Class="AvaliMod.SlotPropsHediff">
        <slotsUsed>
          <li>Torso</li>
        </slotsUsed>
      </li>
    </comps>
  </HediffDef>
</Defs>