<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="ImplantHediffBase">
    <defName>AvaliTemperatureImplantBasic</defName>
    <label>Basic T.C.A</label>
    <description>This augment, sometimes refered to as a T.C.A (short for Temperature Control Augment), has the ability to assist in regulating the body temperature of Avali.</description>
    <spawnThingOnRemoved>AvaliBasicTempControl</spawnThingOnRemoved>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <statOffsets>
          <ComfyTemperatureMax>5</ComfyTemperatureMax>
          <ComfyTemperatureMin>-2</ComfyTemperatureMin>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="AvaliMod.SlotPropsHediff">
        <slotsUsed>
          <li>Temperature</li>
          <li>Torso</li>
        </slotsUsed>
      </li>
    </comps>
  </HediffDef>
</Defs>