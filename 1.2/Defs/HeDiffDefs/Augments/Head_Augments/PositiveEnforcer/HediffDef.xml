<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="ImplantHediffBase">
    <defName>PositiveE</defName>
    <label>Positive enforcement augment</label>
    <labelNoun>a positive enforcement augment</labelNoun>
    <description>This augment manipulates the brain of the avali it is installed on, raising their opinion of others. However, they may become more forgetful.</description>
    <spawnThingOnRemoved>PositiveE</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
    <stages>
      <li>
        <opinionOfOthersFactor>0.5</opinionOfOthersFactor>
        <forgetMemoryThoughtMtbDays>0.2</forgetMemoryThoughtMtbDays>
      </li>
    </stages>
    <comps>
       <li Class="AvaliMod.SlotPropsHediff">
        <slotsUsed>
          <li>Brain</li>
        </slotsUsed>
      </li>
    </comps>
  </HediffDef>
</Defs>